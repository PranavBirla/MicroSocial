<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
/* ===== Custom Scrollbar (Global) ===== */

/* Firefox */
* {
  scrollbar-width: thin;
  scrollbar-color: #22c55e transparent;
}

/* Chrome, Edge, Safari */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background-color: rgba(34, 197, 94, 0.6);
  border-radius: 999px;
  border: 2px solid transparent;
  background-clip: content-box;
}

::-webkit-scrollbar-thumb:hover {
  background-color: rgba(34, 197, 94, 0.85);
}
</style>

</head>
<script>
  const form = document.querySelector("form");
  const btn = document.getElementById("createBtn");

  form.addEventListener("submit", () => {
    btn.value = "Creating...";
    btn.disabled = true;
    btn.classList.add("opacity-70", "cursor-not-allowed");
  });
</script>


<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white p-10">
        <h3 class="text-3xl font-bold mb-5 flex justify-center">Create Account</h3>
        <div class="form flex justify-center items-center m-auto">
            <form action="/register" method="POST" class="flex flex-col gap-5 md:w-1/3 w-10/12">
                <input class="px-3 py-2 outline-none bg-transparent rounded-md border-2 border-zinc-700" type="text"  required minlength="1"
                    placeholder="name" name="name">
                <input class="px-3 py-2 outline-none bg-transparent rounded-md border-2 border-zinc-700" type="text"  required minlength="1"
                    placeholder="username" name="username">
                <input class="px-3 py-2 outline-none bg-transparent rounded-md border-2 border-zinc-700" type="email"  required minlength="1"
                    placeholder="email" name="email">
                <input class="px-3 py-2 outline-none bg-transparent rounded-md border-2 border-zinc-700" type="number"  required minlength="1"
                    placeholder="age" name="age">
                <input class="px-3 py-2 outline-none bg-transparent rounded-md border-2 border-zinc-700" type="password"  required minlength="1"
                    placeholder="password" name="password">
                <input type="submit" id="createBtn" value="Create Account" class="m-auto px-3 py-2 font-bold bg-green-500 text-zinc-900 rounded-md md:w-1/2
                                                                    transition-all duration-300 ease-out
                                                                    hover:scale-105 hover:brightness-110 
                                                                    hover:shadow-[0_0_30px_rgba(34,197,94,0.6)] 
                                                                    active:scale-95" />
            </form>
        </div>
        <div class="text-zinc-400 text-md mt-5 flex flex-col items-center">
            <a href="/login"
                class="px-4 py-2 text-yellow-400 text-lg font-bold transition-all duration-300 ease-out hover:scale-105 hover:brightness-110 active:scale-95">
                Login
            </a>
            <a href="/">Go back to Home</a>
        </div>
    </div>
</body>

</html>